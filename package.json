{
	"name": "@nubolab-ffwd/svelte-fluent",
	"version": "0.4.3",
	"license": "MIT",
	"homepage": "https://github.com/nubolab-ffwd/svelte-fluent",
	"repository": {
		"type": "git",
		"url": "https://github.com/nubolab-ffwd/svelte-fluent.git"
	},
	"publishConfig": {
		"access": "public"
	},
	"svelte": "src/index.js",
	"module": "dist/index.mjs",
	"main": "dist/index.js",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		},
		"./rollup-plugin": {
			"import": "./dist/rollup-plugin.mjs",
			"require": "./dist/rollup-plugin.js"
		},
		"./src/*": "./src/*"
	},
	"scripts": {
		"build": "rollup -c",
		"prepublishOnly": "npm run build",
		"lint": "prettier --check --plugin-search-dir=. . && eslint --cache --ignore-path .gitignore .",
		"format": "prettier --write --plugin-search-dir=. .",
		"storybook": "start-storybook -p 6006",
		"build-storybook": "build-storybook",
		"test": "jest",
		"release": "standard-version",
		"prepare": "husky install"
	},
	"dependencies": {
		"@fluent/dom": "0.8.1",
		"@fluent/sequence": "0.7.0",
		"cached-iterable": "0.3.0",
		"jsdom": "19.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.17.10",
		"@commitlint/cli": "17.0.2",
		"@commitlint/config-conventional": "17.0.2",
		"@fluent/bundle": "0.17.1",
		"@fluent/langneg": "0.6.2",
		"@rollup/plugin-node-resolve": "13.3.0",
		"@rollup/plugin-replace": "4.0.0",
		"@storybook/addon-essentials": "6.5.9",
		"@storybook/addon-storyshots": "6.5.9",
		"@storybook/addons": "6.5.9",
		"@storybook/svelte": "6.5.9",
		"@testing-library/jest-dom": "5.16.4",
		"@testing-library/svelte": "3.1.3",
		"@typescript-eslint/eslint-plugin": "5.28.0",
		"@typescript-eslint/parser": "5.28.0",
		"babel-loader": "^8.2.5",
		"eslint": "8.18.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-svelte3": "4.0.0",
		"husky": "8.0.1",
		"jest": "28.1.1",
		"jest-environment-jsdom": "28.1.1",
		"jest-transform-svelte": "2.1.1",
		"lint-staged": "13.0.2",
		"preact": "^10.7.2",
		"prettier": "2.7.1",
		"prettier-plugin-svelte": "2.7.0",
		"react": "17.0.2",
		"react-dom": "17.0.2",
		"rollup": "2.75.7",
		"rollup-plugin-svelte": "7.1.0",
		"standard-version": "9.3.2",
		"svelte": "3.48.0",
		"svelte-loader": "3.1.3",
		"typescript": "4.7.4",
		"webpack": "^5.72.0"
	},
	"keywords": [
		"svelte",
		"localization",
		"l10n",
		"internationalization",
		"i18n",
		"ftl",
		"plural",
		"gender",
		"locale",
		"language",
		"formatting",
		"translate",
		"translation",
		"format"
	],
	"files": [
		"src",
		"dist"
	],
	"lint-staged": {
		"*.{cjs,js,ts,svelte}": [
			"eslint --cache --ignore-path .gitignore --fix",
			"prettier --write --plugin-search-dir=."
		],
		"*.{md,json,yaml}": "prettier --write --plugin-search-dir=."
	},
	"peerDependencies": {
		"jsdom": "^16.4.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
	}
}
