{
	"name": "@nubolab-ffwd/svelte-fluent",
	"version": "0.4.1",
	"license": "MIT",
	"homepage": "https://github.com/nubolab-ffwd/svelte-fluent",
	"repository": {
		"type": "git",
		"url": "https://github.com/nubolab-ffwd/svelte-fluent.git"
	},
	"publishConfig": {
		"access": "public"
	},
	"svelte": "src/index.js",
	"module": "dist/index.mjs",
	"main": "dist/index.js",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		},
		"./rollup-plugin": {
			"import": "./dist/rollup-plugin.mjs",
			"require": "./dist/rollup-plugin.js"
		},
		"./src/*": "./src/*.js"
	},
	"scripts": {
		"build": "rollup -c",
		"prepublishOnly": "npm run build",
		"lint": "prettier --check --plugin-search-dir=. . && eslint --cache --ignore-path .gitignore .",
		"format": "prettier --write --plugin-search-dir=. .",
		"storybook": "start-storybook -p 6006",
		"build-storybook": "build-storybook",
		"test": "jest",
		"release": "standard-version",
		"prepare": "husky install"
	},
	"dependencies": {
		"@fluent/dom": "0.8.0",
		"@fluent/sequence": "0.7.0",
		"cached-iterable": "0.3.0",
		"jsdom": "18.1.0"
	},
	"devDependencies": {
		"@commitlint/cli": "14.1.0",
		"@commitlint/config-conventional": "14.1.0",
		"@fluent/bundle": "0.17.0",
		"@fluent/langneg": "0.6.0",
		"@rollup/plugin-node-resolve": "13.0.6",
		"@rollup/plugin-replace": "3.0.0",
		"@storybook/addon-essentials": "6.3.12",
		"@storybook/addon-storyshots": "6.3.12",
		"@storybook/addons": "6.3.12",
		"@storybook/svelte": "6.3.12",
		"@testing-library/jest-dom": "5.15.0",
		"@testing-library/svelte": "3.0.3",
		"@typescript-eslint/eslint-plugin": "5.4.0",
		"@typescript-eslint/parser": "5.4.0",
		"eslint": "8.2.0",
		"eslint-config-prettier": "8.3.0",
		"eslint-plugin-svelte3": "3.2.1",
		"husky": "7.0.4",
		"jest": "27.3.1",
		"jest-transform-svelte": "2.1.1",
		"lint-staged": "11.2.6",
		"prettier": "2.4.1",
		"prettier-plugin-svelte": "2.4.0",
		"rollup": "2.60.0",
		"rollup-plugin-svelte": "7.1.0",
		"standard-version": "9.3.2",
		"svelte": "3.44.1",
		"svelte-loader": "3.1.2",
		"typescript": "4.4.4"
	},
	"keywords": [
		"svelte",
		"localization",
		"l10n",
		"internationalization",
		"i18n",
		"ftl",
		"plural",
		"gender",
		"locale",
		"language",
		"formatting",
		"translate",
		"translation",
		"format"
	],
	"files": [
		"src",
		"dist"
	],
	"lint-staged": {
		"*.{cjs,js,ts,svelte}": [
			"eslint --cache --ignore-path .gitignore --fix",
			"prettier --write --plugin-search-dir=."
		],
		"*.{md,json,yaml}": "prettier --write --plugin-search-dir=."
	},
	"peerDependencies": {
		"jsdom": "^16.4.0 || ^17.0.0 || ^18.0.0"
	}
}
