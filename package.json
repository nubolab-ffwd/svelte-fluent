{
  "name": "@nubolab-ffwd/svelte-fluent",
  "version": "0.1.4",
  "license": "MIT",
  "homepage": "https://github.com/nubolab-ffwd/svelte-fluent",
  "repository": {
    "type": "git",
    "url": "https://github.com/nubolab-ffwd/svelte-fluent.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "svelte": "src/index.js",
  "module": "dist/index.mjs",
  "main": "dist/index.js",
  "scripts": {
    "build": "rollup -c",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext js,svelte",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "test": "jest",
    "release": "standard-version"
  },
  "dependencies": {
    "@fluent/dom": "^0.6.0",
    "@fluent/langneg": "^0.4.0",
    "@fluent/sequence": "^0.5.0",
    "cached-iterable": "^0.3.0",
    "jsdom": "^16.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@fluent/bundle": "^0.15.1",
    "@fluent/dom": "^0.6.0",
    "@fluent/langneg": "^0.4.0",
    "@fluent/sequence": "^0.5.0",
    "@rollup/plugin-node-resolve": "^8.1.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@storybook/addon-actions": "^5.3.19",
    "@storybook/addon-knobs": "^5.3.19",
    "@storybook/addon-storyshots": "^5.3.19",
    "@storybook/addons": "^5.3.19",
    "@storybook/svelte": "^5.3.19",
    "@testing-library/jest-dom": "^5.11.0",
    "@testing-library/svelte": "^3.0.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "eslint": "^7.3.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^4.2.5",
    "jest": "25",
    "jest-transform-svelte": "^2.1.1",
    "lint-staged": "^10.2.11",
    "rollup": "^2.18.1",
    "rollup-plugin-svelte": "^5.2.3",
    "standard-version": "^9.0.0",
    "svelte": "^3.23.2",
    "svelte-loader": "^2.13.6"
  },
  "keywords": [
    "svelte",
    "localization",
    "l10n",
    "internationalization",
    "i18n",
    "ftl",
    "plural",
    "gender",
    "locale",
    "language",
    "formatting",
    "translate",
    "translation",
    "format"
  ],
  "files": [
    "src",
    "dist"
  ],
  "lint-staged": {
    "*.{js,svelte}": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.js$": [
        "babel-jest",
        {
          "presets": [
            [
              "@babel/preset-env",
              {
                "targets": {
                  "node": "current"
                }
              }
            ]
          ]
        }
      ],
      "^.+\\.svelte$": "jest-transform-svelte"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@fluent/dom)/)"
    ],
    "moduleFileExtensions": [
      "js",
      "svelte",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss|stylesheet)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/storybook-static/"
    ]
  }
}
