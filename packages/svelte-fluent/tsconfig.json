{
	"compilerOptions": {
		"paths": {},
		"rootDirs": ["."],
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"lib": ["esnext", "DOM", "DOM.Iterable"],
		"module": "node16",
		"moduleResolution": "node16",
		"noEmit": true,
		"target": "esnext",

		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": false,
		"sourceMap": true,
		"strict": true
	},
	"include": [
		"src/**/*.js",
		"src/**/*.ts",
		"src/**/*.svelte",
		"tests/**/*.js",
		"tests/**/*.ts",
		"tests/**/*.svelte",
		"../../testsuite/tests/dom/e2e.test.js",
		"../../testsuite/tests/ssr/e2e.test.js"
	],
	"exclude": ["node_modules/**"]
}
