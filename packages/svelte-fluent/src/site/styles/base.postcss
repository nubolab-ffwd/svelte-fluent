@import '@fontsource-variable/manrope';

@font-face {
	font-family: 'Mensch';
	src:
		url('../fonts/Mensch-Regular.woff2') format('woff2'),
		url('../fonts/Mensch-Regular.woff') format('woff');
	font-weight: normal;
	font-style: normal;
	font-display: swap;
}

:root {
	--ratio: 1.4;
	--s-5: calc(var(--s-4) / var(--ratio));
	--s-4: calc(var(--s-3) / var(--ratio));
	--s-3: calc(var(--s-2) / var(--ratio));
	--s-2: calc(var(--s-1) / var(--ratio));
	--s-1: calc(var(--s0) / var(--ratio));
	--s0: 1rem;
	--s1: calc(var(--s0) * var(--ratio));
	--s2: calc(var(--s1) * var(--ratio));
	--s3: calc(var(--s2) * var(--ratio));
	--s4: calc(var(--s3) * var(--ratio));
	--s5: calc(var(--s4) * var(--ratio));

	--measure: 60ch;
	--border-thin: var(--s-5);
	--space: var(--s0);

	--font-size-minimum: 12px;
	--font-size-small: calc(max(var(--s-3), var(--font-size-minimum)));
	--font-size-smallish: calc(max(var(--s-1), var(--font-size-minimum)));
	--font-size-base: calc(max(1rem, var(--font-size-minimum)));
	--font-size-biggish: calc(max(var(--s1), var(--font-size-minimum)));
	--font-size-big: calc(max(var(--s3), var(--font-size-minimum)));

	--font-size-code: var(--font-size-smallish);
	--font-family-code: Mensch;
}

:root {
	font-family: 'Manrope Variable', system-ui;
	font-size: clamp(1rem, calc(1rem + ((1vw - 0.48rem) * 0.6944)), 1.5rem);
	min-height: 0vw; /* safari fix */
	line-height: var(--ratio);
}

body {
	margin: 0;
	min-inline-size: 320px;
}

* {
	max-inline-size: var(--measure);
	box-sizing: border-box;
}

html,
body,
div,
header,
nav,
main,
footer,
pre,
pre > code {
	max-inline-size: none;
}

h1,
h2,
h3,
h4,
h5,
h6,
blockquote,
dl,
dt,
dd,
p {
	margin: 0;
}

h1,
h2,
h3,
h4,
h5,
h6 {
	& a {
		color: inherit;
		font-variation-settings: inherit;
		&::after {
			content: '#';
			color: var(--theme-color-gray);
			margin-inline-start: 0.25ch;
		}
	}
}

* {
	font-variation-settings: 'wght' 380;
}

h1 {
	font-variation-settings: 'wght' 640;
}

h2 {
	font-variation-settings: 'wght' 570;
}

h3 {
	font-variation-settings: 'wght' 620;
}

strong {
	font-variation-settings: 'wght' 570;
}

a {
	color: inherit;
	text-decoration: none;
}

input,
button,
select {
	font-size: var(--font-size-base);
}

pre {
	overflow-x: auto;
	tab-size: 2;
	padding: var(--space, 1rem);
}

pre,
code {
	font-family: var(--font-family-code);
	font-size: var(--font-size-code);

	&[class*='language-'] {
		font-family: var(--font-family-code);
		font-size: var(--font-size-code);
		line-height: var(--ratio);
	}
}

table {
	inline-size: 100%;
	border-collapse: collapse;
	& td,
	& th {
		border-width: var(--border-thin);
		border-style: solid;
		padding: var(--s-1);
		text-align: left;
	}
	& th {
		font-variation-settings: 'wght' 570;
		white-space: nowrap;
	}
	& pre {
		padding: 0;
	}
	& pre,
	& code {
		white-space: pre;
	}
}

.responsive-table {
	max-inline-size: 100%;
	overflow-x: auto;
}
